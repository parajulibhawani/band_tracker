<h2>Add a band</h2>
<form action="/bands/new" method="post">
  <label for="band_name">Band Name</label>
  <input type="text" name="band_name">
  <button type="submit">Add</button>
</form>
<hr>
<h3>List of bands</h3>
@if(@Model.Count == 0)
{
  <p>
    No bands in the list.
  </p>
}
else
{
  <ul>
    @foreach(var band in Model)
    {
      <li><a href="/band/@band.GetId()">@band.GetBandName()</a></li>
    }
  </ul>
}
<a href="/">Return To Home Page</a>
